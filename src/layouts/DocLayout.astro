---
import Layout from './Layout.astro'

export interface Props {
  title?: string
  description?: string
}

const { title = 'Documentación', description = 'Documentación del proyecto' } = Astro.props
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto">
    <article class="prose prose-lg prose-slate">
      <!-- Contenedor específico para documentación -->
      <div class="bg-white/70 backdrop-blur-sm rounded-lg shadow-lg p-8 border border-white/20">
        <slot />
      </div>
    </article>
  </div>
</Layout>
