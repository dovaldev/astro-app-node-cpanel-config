---
import Layout from './Layout.astro'

export interface Props {
  title?: string
  description?: string
}

const { title = 'Documentación', description = 'Documentación del proyecto' } = Astro.props
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <article class="prose prose-lg prose-slate max-w-none">
      <!-- Contenedor específico para documentación -->
      <div class="bg-white/70 backdrop-blur-sm rounded-lg shadow-lg p-8 border border-white/20">
        <slot />
      </div>
    </article>
  </div>
</Layout>

<style>
  /* Estilos específicos para documentación */
  .prose {
    /* Headings */
    --tw-prose-headings: #1e293b;
    --tw-prose-h1: #1e40af;
    --tw-prose-h2: #1d4ed8;
    --tw-prose-h3: #2563eb;
    line-height: 1.7;
  }

  .prose h1 {
    color: #1e40af;
    border-bottom: 2px solid #c7d2fe;
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 2.25rem;
    font-weight: 700;
  }

  .prose h2 {
    color: #1d4ed8;
    border-left: 4px solid #a5b4fc;
    padding-left: 1rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.875rem;
    font-weight: 600;
  }

  .prose h3 {
    color: #2563eb;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  /* Code blocks */
  .prose pre {
    background-color: #0f172a;
    border: 1px solid #334155;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .prose code {
    background-color: #f1f5f9;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    color: #1e293b;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: #f1f5f9;
  }

  /* Links */
  .prose a {
    color: #2563eb;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .prose a:hover {
    color: #1e40af;
    text-decoration: underline;
  }

  /* Lists */
  .prose ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .prose ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .prose li {
    margin: 0.5rem 0;
  }

  /* Blockquotes */
  .prose blockquote {
    border-left: 4px solid #a5b4fc;
    background-color: #eef2ff;
    padding: 1rem;
    border-radius: 0 0.5rem 0.5rem 0;
    margin: 1rem 0;
    font-style: italic;
  }

  /* Tables */
  .prose table {
    border-collapse: collapse;
    border: 1px solid #cbd5e1;
    width: 100%;
    margin: 1rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid #cbd5e1;
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .prose th {
    background-color: #eef2ff;
    font-weight: 600;
    color: #1e40af;
  }

  /* Paragraphs */
  .prose p {
    margin: 1rem 0;
    line-height: 1.7;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .prose {
      font-size: 0.875rem;
    }
    
    .prose h1 {
      font-size: 1.875rem;
    }
    
    .prose h2 {
      font-size: 1.5rem;
    }
    
    .prose h3 {
      font-size: 1.25rem;
    }
  }
</style>